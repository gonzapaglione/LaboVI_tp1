<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_background"
    tools:context=".SeccionesPrincipales.Turnos.TurnosFragment">

    <!-- Layout principal vertical -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título principal -->
        <TextView
            android:id="@+id/tvTituloServicios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mis turnos"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <!-- Secciones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Botón Próximos -->
            <LinearLayout
                android:id="@+id/btnProximos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvProximos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Próximos"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:padding="8dp" />

                <View
                    android:id="@+id/lineaProximos"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/red_primary"
                    android:visibility="visible" />
            </LinearLayout>

            <!-- Botón Pasados -->
            <LinearLayout
                android:id="@+id/btnPasados"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPasados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pasados"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:padding="8dp" />

                <View
                    android:id="@+id/lineaPasados"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/red_primary"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <!-- RecyclerView Turnos Próximos -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTurnosProximos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp" />

        <!-- RecyclerView Turnos Pasados -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTurnosPasados"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- FAB flotante -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAgregarTurno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:contentDescription="Agregar turno"
        app:srcCompat="@drawable/ic_add"
        app:tint="@color/white"
        android:backgroundTint="@color/red_primary" />

</FrameLayout>
