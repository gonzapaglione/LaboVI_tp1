<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#230F10"
    tools:context=".MainActivity">

    <!-- Contenedor del contenido principal -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- LÃ­nea divisoria superior -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A03A3A" />

    <!-- Barra inferior -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:background="#1C0A0B"
        android:paddingVertical="4dp"
        android:elevation="8dp">

        <!-- INICIO -->
        <LinearLayout
            android:id="@+id/navInicio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/iconInicio"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_home"
                app:tint="#BDBDBD" />

            <TextView
                android:id="@+id/NavInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/inicio"
                android:textSize="12sp"
                android:textColor="#C7C4C4" />
        </LinearLayout>

        <!-- MIS TURNOS -->
        <LinearLayout
            android:id="@+id/navTurnos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/iconTurnos"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_calendar"
                app:tint="#BDBDBD" />

            <TextView
                android:id="@+id/NavMisTurnos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/mis_turnos"
                android:textSize="12sp"
                android:textColor="#C7C4C4" />
        </LinearLayout>

        <!-- SERVICIOS -->
        <LinearLayout
            android:id="@+id/navServicios"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/iconServicios"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_scissors"
                app:tint="#BDBDBD" />

            <TextView
                android:id="@+id/NavServicios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/servicios"
                android:textSize="12sp"
                android:textColor="#C7C4C4" />
        </LinearLayout>

        <!-- PERFIL -->
        <LinearLayout
            android:id="@+id/navPerfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/iconPerfil"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_account"
                app:tint="#BDBDBD" />

            <TextView
                android:id="@+id/NavPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/perfil"
                android:textSize="12sp"
                android:textColor="#C7C4C4" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
